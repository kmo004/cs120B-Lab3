 #include <avr/io.h>
 #ifdef _SIMULATE_
 #include "simAVRHeader.h"
 #endif

int main(void){
	DDRA = 0x00; PORTA = 0xFF;
	DDRB = 0x00; PORTB = 0xFF;
	DDRC = 0xFF; PORTC = 0x00;

	unsigned char temp = 0x00;
	unsigned char numTotalA = 0x00;
	unsigned char numTotalB = 0x00;
	unsigned char mask = 0x01;
	
	temp = PINA;
	for(unsigned char i = 0; i < 0x08; i++){
		temp = temp >> i;
		if(temp && mask == 0x01){
			numTotalA++;
		}
	}
	temp = PINB
	for(unsigned char j = 0; j < 0x08; j++){
		temp = temp >> j;
		if(temp && mask == 0x01){
			numTotalB++;
		}
	}
	PORTC = numTotalA + numTotalB;
		
	
	
	return 1;
}
